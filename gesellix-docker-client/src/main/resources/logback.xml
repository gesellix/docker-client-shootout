<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %msg%n</pattern>
        </encoder>
    </appender>
    
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
    
    <logger name="com.javacodegeeks" level="INFO" />
    <logger name="de.gesellix" level="INFO" />
</configuration>